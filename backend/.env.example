# ============================================================================
# CloudSense Environment Configuration
# ============================================================================

# ============================================================================
# Node.js Backend Server
# ============================================================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# ============================================================================
# Supabase Configuration
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ============================================================================
# Google OAuth (via Supabase Auth)
# ============================================================================
# No additional config needed - Supabase handles Google OAuth setup

# ============================================================================
# AI/ML Services
# ============================================================================

# Gemini API (for chatbot)
GEMINI_API_KEY=your-gemini-api-key

# GROQ API (for fast summaries)
GROQ_API_KEY=your-groq-api-key

# ML Pipeline Service
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_HOST=0.0.0.0
ML_SERVICE_PORT=8000

# ============================================================================
# Python ML Pipeline
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# File Storage
# ============================================================================
STORAGE_BUCKET=satellite-data
MAX_FILE_SIZE_MB=500

# ============================================================================
# Processing Configuration
# ============================================================================
DETECTION_THRESHOLD_BT=218.0  # Brightness temperature threshold (K)
MIN_CLUSTER_PIXELS=20
MIN_CLUSTER_AREA_KM2=400
MAX_CLUSTER_RADIUS_KM=2000

# ============================================================================
# Tracking Configuration
# ============================================================================
MAX_MATCH_DISTANCE_KM=200
MAX_TIME_GAP_MINUTES=60

# ============================================================================
# API Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=your-secret-key-for-sessions
# CRITICAL: Generate a secure random secret with:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=your-cryptographically-secure-secret-here-minimum-64-characters

# ============================================================================
# Logging & Monitoring
# ============================================================================
ENABLE_LOGGING=true
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log

